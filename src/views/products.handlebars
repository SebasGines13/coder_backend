<div
  id="welcomeMessage"
  style="position: fixed; top: 10px; right: 10px;"
  class="font-weight-bold text-secondary"
>
  ¡Bienvenido
  <span id="userName"></span>!
  <div><button id="logoutBtn" class="btn btn-danger mt-3">Logout</button></div>
</div>

<div class="container">
  <h1 class="mt-4">Carrito de Compras</h1>

  <!-- Agrega un input para el buscador -->
  <div class="search-container mb-3">
    <input
      type="text"
      id="searchInput"
      placeholder="Buscar productos por título o descripción..."
    />
    <button id="searchBtn" class="btn btn-primary">Buscar</button>
  </div>

  <div class="row mt-4">
    <div class="col-md-8">
      <div class="carousel-container">
        <div class="carousel">
          <!-- Aquí se mostrarán las tarjetas en el carrusel -->
        </div>
      </div>
      <div class="pagination mt-3">
        <div class="d-flex justify-content-between align-items-center">
          <button id="prevBtn" class="btn btn-secondary mr-2">Anterior</button>
          <button id="nextBtn" class="btn btn-secondary">Siguiente</button>
        </div>
      </div>
      <div class="pagination-info"></div>
    </div>
    <div class="col-md-4 p-3 card">
      <div class="container font-weight-bold">
        <span id="cartID"> Carrito ID: </span>
      </div>

      <div class="cart border p-3" id="cart">

        <!-- Aquí se mostrarán los elementos del carrito -->
      </div>

      <!-- Agrega el total del carrito -->
      <div class="total mt-3 font-weight-bold text-primary" id="total">
        <!-- Aquí se mostrará el total del carrito -->
      </div>

      <!-- Agrega el botón para borrar el carrito -->
      <button id="clearCartBtn" class="btn btn-danger mt-3">Borrar Carrito</button>
      <!-- Agrega el botón para finalizar la compra -->
      <div class="finalize-button mt-3">
        <button id="finalizeBtn" class="btn btn-success">Finalizar Compra</button>
      </div>

    </div>
  </div>
</div>