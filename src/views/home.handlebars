<div class="container">
  <div class="row">
    <div class="col-8">
      <h2 class="display-2">Listado de Productos</h2>
    </div>
    <div class="col-4 text-right">
      <p class="mt-2"><strong>¡Bienvenido
          {{user.name}}! ({{user.rol}})
        </strong></p>
      <button
        id="btnLogout"
        class="btn btn-danger justify-content-center"
      >Logout</button>
    </div>
  </div>
  <table class="table table-dark table-hover">
    <thead>
      <tr>
        <th>Título</th>
        <th>Descripción</th>
        <th>Precio</th>
        <th>Código</th>
        <th>Stock</th>
        <th>Categoría</th>
      </tr>
    </thead>
    <tbody>
      {{#each productos}}
        <tr>
          <td>{{this.title}}</td>
          <td>{{this.description}}</td>
          <td>${{this.price}}</td>
          <td>{{this.code}}</td>
          <td>{{this.stock}}</td>
          <td>{{this.category}}</td>
        </tr>
      {{/each}}
    </tbody>
  </table>
</div>